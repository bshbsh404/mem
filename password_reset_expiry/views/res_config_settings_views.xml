<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="res_config_settings_view_reset_expiry_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.reset.expiry</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="auth_signup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='enable_password_reset']" position="after">
                    <setting string="Password reset expiration time" help="Password reset expiration time in minutes" id="signup_token_expiration_minutes">
                        <field name="signup_token_expiration_minutes"/>
                    </setting>
                </xpath>
            </field>
        </record>

</odoo>
