<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Outlook Config Form View -->
    <record id="outlook_config_view_form" model="ir.ui.view">
        <field name="name">outlook.config.form</field>
        <field name="model">outlook.config</field>
        <field name="arch" type="xml">
            <form string="Outlook Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_auth_url" type="object" class="oe_stat_button" icon="fa-link" string="Get Auth URL"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="client_id"/>
                            <field name="client_secret" password="True"/>
                            <field name="tenant_id"/>
                            <field name="redirect_uri"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Outlook Config Tree View -->
    <record id="outlook_config_view_tree" model="ir.ui.view">
        <field name="name">outlook.config.tree</field>
        <field name="model">outlook.config</field>
        <field name="arch" type="xml">
            <tree string="Outlook Configurations">
                <field name="name"/>
                <field name="client_id"/>
                <field name="tenant_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Outlook Config Action -->
    <record id="outlook_config_action" model="ir.actions.act_window">
        <field name="name">Outlook Configuration</field>
        <field name="res_model">outlook.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Outlook Configuration
            </p>
            <p>
                Configure Microsoft Outlook integration for calendar sync
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="outlook_config_menu"
              name="Outlook Configuration"
              parent="hr.menu_hr_configuration"
              action="outlook_config_action"
              sequence="100"
              groups="base.group_system"/>
</odoo>
