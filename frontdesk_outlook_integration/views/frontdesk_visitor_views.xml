<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Frontdesk Visitor Form View -->
    <record id="frontdesk_visitor_form_outlook" model="ir.ui.view">
        <field name="name">frontdesk.visitor.form.outlook</field>
        <field name="model">frontdesk.visitor</field>
        <field name="inherit_id" ref="frontdesk.frontdesk_visitor_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='evaluation_comment']" position="after">
                <separator string="Outlook Integration"/>
                <field name="outlook_event_id" readonly="1"/>
                <field name="outlook_event_url" widget="url" readonly="1"/>
                <field name="outlook_sync_status" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Frontdesk Visitor Tree View -->
    <record id="frontdesk_visitor_tree_outlook" model="ir.ui.view">
        <field name="name">frontdesk.visitor.tree.outlook</field>
        <field name="model">frontdesk.visitor</field>
        <field name="inherit_id" ref="frontdesk.frontdesk_visitor_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="outlook_sync_status" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>