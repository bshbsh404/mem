<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_police_api_config_tree" model="ir.ui.view">
        <field name="name">police.api.config.tree</field>
        <field name="model">police.api.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="api_url"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_police_api_config_form" model="ir.ui.view">
        <field name="name">police.api.config.form</field>
        <field name="model">police.api.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="oauth_settings" string="OAuth Settings (Oracle IDCS)">
                            <field name="auth_base_url"/>
                            <field name="client_id"/>
                            <field name="client_secret" password="True"/>
                            <field name="scope"/>
                        </group>
                        <group name="api_settings" string="ROP API Settings">
                            <field name="api_base_url"/>
                            <field name="auth_key" password="True"/>
                            <field name="consumer_code"/>
                            <field name="esb_category_code"/>
                            <field name="crn_of_request"/>
                        </group>
                        <group name="general_settings" string="General Settings">
                            <field name="timeout"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_police_api_config" model="ir.actions.act_window">
        <field name="name">Police API Configuration</field>
        <field name="res_model">police.api.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Police API Integration
            </p>
            <p>
                Set up the connection to the Police API for automatic visitor data retrieval.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_frontdesk_police_api_config"
              name="Police API"
              parent="frontdesk.menu_frontdesk_config"
              action="action_police_api_config"
              sequence="50"/>
</odoo>