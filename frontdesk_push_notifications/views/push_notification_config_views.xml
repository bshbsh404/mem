<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Push Notification Config Form View -->
    <record id="view_push_notification_config_form" model="ir.ui.view">
        <field name="name">push.notification.config.form</field>
        <field name="model">push.notification.config</field>
        <field name="arch" type="xml">
            <form string="Push Notification Configuration">
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add any status indicators here if needed -->
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Settings">
                            <field name="active"/>
                            <field name="api_url"/>
                            <field name="timeout"/>
                        </group>
                        <group string="Authentication">
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                        <group string="Testing">
                            <field name="test_user_id" help="User ID to use for testing notifications"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Push Notification Config Tree View -->
    <record id="view_push_notification_config_tree" model="ir.ui.view">
        <field name="name">push.notification.config.tree</field>
        <field name="model">push.notification.config</field>
        <field name="arch" type="xml">
            <tree string="Push Notification Configurations">
                <field name="name"/>
                <field name="api_url"/>
                <field name="username"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Push Notification Config Action -->
    <record id="action_push_notification_config" model="ir.actions.act_window">
        <field name="name">Push Notification Config</field>
        <field name="res_model">push.notification.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a push notification configuration
            </p>
            <p>
                Configure the API settings for sending push notifications to mobile devices
                when new visit requests are created.
            </p>
        </field>
    </record>

    <!-- Settings View Extension -->
    <record id="res_config_settings_view_form_inherit_push_notifications" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.push.notifications</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Frontdesk Push Notifications" string="Frontdesk Push Notifications" data-key="frontdesk_push_notifications">
                    <h2>Push Notifications</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="push_notification_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="push_notification_enabled"/>
                                <div class="text-muted">
                                    Send push notifications when new visit requests are created
                                </div>
                                <div class="content-group" attrs="{'invisible': [('push_notification_enabled', '=', False)]}">
                                    <div class="mt16">
                                        <label for="push_api_url" class="o_light_label"/>
                                        <field name="push_api_url" placeholder="https://api.example.com/notifications"/>
                                    </div>
                                    <div class="mt8">
                                        <label for="push_api_username" class="o_light_label"/>
                                        <field name="push_api_username" placeholder="API Username"/>
                                    </div>
                                    <div class="mt8">
                                        <label for="push_api_password" class="o_light_label"/>
                                        <field name="push_api_password" placeholder="API Password" password="True"/>
                                    </div>
                                    <div class="mt8">
                                        <label for="push_api_timeout" class="o_light_label"/>
                                        <field name="push_api_timeout"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_push_notification_config"
              name="Push Notifications"
              parent="frontdesk.frontdesk_menu_config"
              action="action_push_notification_config"
              sequence="20"/>

</odoo>