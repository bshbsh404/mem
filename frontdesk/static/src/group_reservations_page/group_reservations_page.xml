<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="frontdesk.GroupReservations">
        <div class="d-flex flex-column justify-content-center">
            <div class="container-fluid">
                <div class="row g-0 d-flex justify-content-center">
                    <div class="col-lg-8">
                        <!-- Error container -->
                        <div t-if="state.errorMessage" class="alert alert-danger" role="alert" id="errorMessage">
                            <t t-esc="state.errorMessage"/>
                        </div>
                        
                        <h4 class="mb-4 text-center">Group Reservations</h4>
                        
                        <form t-on-submit.prevent="_onSubmit">
                            <!-- Section 1: Reservation Details -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5>Reservation Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="company_name" class="form-label">Company Name <span class="small text-danger">*</span></label>
                                                <input type="text" class="form-control" id="company_name" t-ref="inputCompanyName" required="required" placeholder="Enter company name"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="hosting_employee" class="form-label">Hosting Employee's Name <span class="small text-danger">*</span></label>
                                                <input type="text" class="form-control" id="hosting_employee" t-ref="inputHostingEmployee" required="required" placeholder="Enter hosting employee name"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="visit_date" class="form-label">Date <span class="small text-danger">*</span></label>
                                                <input type="date" class="form-control" id="visit_date" t-ref="inputVisitDate" required="required" t-att-min="new Date().toISOString().split('T')[0]"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="visit_time" class="form-label">Time <span class="small text-danger">*</span></label>
                                                <input type="time" class="form-control" id="visit_time" t-ref="inputVisitTime" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Section 2: Visitor Information -->
                            <div class="card mb-4">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5>Visitor Information</h5>
                                    <button type="button" class="btn btn-sm btn-primary" t-on-click="_addVisitor">
                                        <i class="fa fa-plus"></i> Add Visitor
                                    </button>
                                </div>
                                <div class="card-body">
                                    <div t-if="state.visitors.length === 0" class="text-center text-muted p-4">
                                        No visitors added yet. Click "Add Visitor" to start adding visitor information.
                                    </div>
                                    
                                    <div t-foreach="state.visitors" t-as="visitor" t-key="visitor.id" class="border rounded p-3 mb-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0">Visitor <t t-esc="visitor_index + 1"/></h6>
                                            <button type="button" class="btn btn-sm btn-outline-danger" t-on-click="_removeVisitor" t-att-data-visitor-id="visitor.id">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Full Name <span class="small text-danger">*</span></label>
                                                    <input type="text" class="form-control visitor-name" 
                                                           t-att-data-visitor-id="visitor.id" 
                                                           t-att-value="visitor.name"
                                                           t-on-input="_onVisitorFieldChange"
                                                           required="required" 
                                                           placeholder="Enter full name"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Email Address <span class="small text-danger">*</span></label>
                                                    <input type="email" class="form-control visitor-email" 
                                                           t-att-data-visitor-id="visitor.id"
                                                           t-att-value="visitor.email"
                                                           t-on-input="_onVisitorFieldChange"
                                                           required="required" 
                                                           placeholder="Enter email address"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Phone Number <span class="small text-danger">*</span></label>
                                                    <input type="tel" class="form-control visitor-phone" 
                                                           t-att-data-visitor-id="visitor.id"
                                                           t-att-value="visitor.phone"
                                                           t-on-input="_onVisitorFieldChange"
                                                           required="required" 
                                                           placeholder="Enter phone number"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Visitor ID <span class="small text-danger">*</span></label>
                                                    <input type="text" class="form-control visitor-id-number" 
                                                           t-att-data-visitor-id="visitor.id"
                                                           t-att-value="visitor.idNumber"
                                                           t-on-input="_onVisitorFieldChange"
                                                           required="required" 
                                                           placeholder="Enter ID number"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label">Visitor Employee Email (Optional)</label>
                                                    <input type="email" class="form-control visitor-employee-email" 
                                                           t-att-data-visitor-id="visitor.id"
                                                           t-att-value="visitor.employeeEmail"
                                                           t-on-input="_onVisitorFieldChange"
                                                           placeholder="If visitor is an employee, enter their company email"/>
                                                    <small class="form-text text-muted">Leave empty for external visitors</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Submit Group Reservation
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
