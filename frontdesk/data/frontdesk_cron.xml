<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="action_toggle_blacklist_visit" model="ir.actions.server">
            <field name="name">Toggle Blacklist</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="groups_id" eval="[(4, ref('frontdesk.group_security_user'))]"/>
            <field name="state">code</field>
            <field name="code">
                action = env['res.partner'].browse(env.context.get('active_ids')).action_toggle_blacklist()
            </field>
        </record>

        <record id="ir_cron_frontdesk_reminder" model="ir.cron">
            <field name="name">Frontdesk Visit Reminder</field>
            <field name="model_id" ref="model_frontdesk_visitor"/>
            <field name="state">code</field>
            <field name="code">model.send_reminder_notifications()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_frontdesk_postpone" model="ir.cron">
            <field name="name">Frontdesk Visit Postponement</field>
            <field name="model_id" ref="model_frontdesk_visitor"/>
            <field name="state">code</field>
            <field name="code">model.send_postponement_notifications()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_check_absent_visitors" model="ir.cron">
            <field name="name">Check Absent Visitors</field>
            <field name="model_id" ref="model_frontdesk_visitor"/>
            <field name="state">code</field>
            <field name="code">model.check_absent_visitors()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="action_cancel_all_visits_due_to_extreme_weather" model="ir.actions.server">
            <field name="name">Cancel All Visits Due to Extreme Weather</field>
            <field name="model_id" ref="model_frontdesk_visitor"/>
            <field name="state">code</field>
            <field name="code">model.cancel_all_visits_due_to_extreme_weather()</field>
            <field name="binding_model_id" ref="model_frontdesk_frontdesk"/>
            <field name="binding_type">action</field>
            <field name="groups_id" eval="[(4, ref('frontdesk.group_security_user'))]"/>
        </record>
    </data>
</odoo>
