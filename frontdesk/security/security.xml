<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="frontdesk_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
    </record>

    <record id="frontdesk_group_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
        <field name="implied_ids" eval="[(4, ref('frontdesk.frontdesk_group_user'))]"/>
    </record>

    <record id="group_visit_reassignment_manager" model="res.groups">
        <field name="name">Visit Reassignment Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4, ref('frontdesk.frontdesk_group_administrator'))]"/>
    </record>

    <record id="frontdesk_frontdesk_company_rule" model="ir.rule">
        <field name="name">Access stations of own companies only</field>
        <field name="model_id" ref="model_frontdesk_frontdesk"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="frontdesk_visitor_company_rule" model="ir.rule">
        <field name="name">Access visitors of own companies only</field>
        <field name="model_id" ref="model_frontdesk_visitor"/>
        <field name="domain_force">[('station_id.company_id', 'in', company_ids)]</field>
    </record>

    <record id="frontdesk_frontdesk_user_rule" model="ir.rule">
        <field name="name">User Group Frontdesk Frontdesk Model</field>
        <field name="model_id" ref="model_frontdesk_frontdesk"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_user'))]"/>
        <field name="domain_force">[('responsible_ids', 'in', user.id)]</field>
    </record>

    <record id="frontdesk_visitor_user_rule" model="ir.rule">
        <field name="name">User Group Frontdesk Visitor Model</field>
        <field name="model_id" ref="model_frontdesk_visitor"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_user'))]"/>
        <field name="domain_force">[('station_id.responsible_ids', 'in', user.id)]</field>
    </record>

    <record id="frontdesk_request_user_rule" model="ir.rule">
        <field name="name">User Group Frontdesk Request Model</field>
        <field name="model_id" ref="model_frontdesk_request"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_user'))]"/>
        <field name="domain_force">[('station_id.responsible_ids', 'in', user.id)]</field>
    </record>

    <record id="frontdesk_frontdesk_administrator_rule" model="ir.rule">
        <field name="name">Allow to create or edit all stations</field>
        <field name="model_id" ref="model_frontdesk_frontdesk"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_administrator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="frontdesk_visitor_administrator_rule" model="ir.rule">
        <field name="name">Allow to create or edit all visitors</field>
        <field name="model_id" ref="model_frontdesk_visitor"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_administrator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="frontdesk_request_administrator_rule" model="ir.rule">
        <field name="name">Allow to create or edit all requests</field>
        <field name="model_id" ref="model_frontdesk_request"/>
        <field name="groups" eval="[(4, ref('frontdesk.frontdesk_group_administrator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="group_security_user" model="res.groups">
        <field name="name">Visit Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="security_rule_cancel_visits_due_to_extreme_weather" model="ir.rule">
        <field name="name">Cancel Visits Due to Extreme Weather</field>
        <field name="model_id" ref="model_frontdesk_visitor"/>
        <field name="groups" eval="[(4, ref('frontdesk.group_security_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Record Rule for Employees: Visit Reassignment Requests -->
    <record id="visit_reassignment_request_rule_employee" model="ir.rule">
        <field name="name">Visit Reassignment Requests: Employee Access</field>
        <field name="model_id" ref="model_visit_reassignment_request"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Record Rule for Employees: Employee Availability -->
    <record id="employee_availability_rule_employee" model="ir.rule">
        <field name="name">Employee Availability: Employee Access</field>
        <field name="model_id" ref="model_employee_availability"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('name.user_id', '=', user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Record Rule for Managers: Full Access -->
    <record id="visit_reassignment_request_rule_manager" model="ir.rule">
        <field name="name">Visit Reassignment Requests: Manager Access</field>
        <field name="model_id" ref="model_visit_reassignment_request"/>
        <field name="groups" eval="[(4, ref('group_visit_reassignment_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="employee_availability_rule_manager" model="ir.rule">
        <field name="name">Employee Availability: Manager Access</field>
        <field name="model_id" ref="model_employee_availability"/>
        <field name="groups" eval="[(4, ref('group_visit_reassignment_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Visit Report Managers Group -->
    <record id="group_visit_report_managers" model="res.groups">
        <field name="name">Visit Report Managers</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
        <field name="comment">Group for users who can access visit reports</field>
    </record>
    
    <!-- Frontdesk Configuration Group -->
    <record id="group_frontdesk_configuration" model="res.groups">
        <field name="name">Frontdesk Configuration</field>
        <field name="category_id" ref="base.module_category_human_resources_frontdesk"/>
        <field name="comment">Group for users who can access frontdesk configuration settings</field>
    </record>
</odoo>
