<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_visitor_form_visiter_inherit" model="ir.ui.view">
            <field name="name">res.partner.visitor.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_visitor" invisible="1"/>
                    <field name="is_blacklisted_from_visit"/>
                    <field name="passport_id"/>
                    <field name="national_id"/>
                </xpath>
                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name="required">is_visitor and not is_company</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <record id="action_visitors_form" model="ir.actions.act_window">
            <field name="name">Visitors</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_is_visitor': True}</field>
            <field name="domain">[('is_visitor', '=', True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('base.res_partner_kanban_view')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_partner_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('frontdesk.res_partner_visitor_form_visiter_inherit')})]"/>
        </record>

        <menuitem
            id="frontdesk_menu_partners"
            name="Visitors"
            parent="frontdesk_menu_root"
            action="action_visitors_form"
            sequence="1"/>

    </data>
</odoo>