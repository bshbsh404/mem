<odoo>
    <record id="view_res_config_settings_sms" model="ir.ui.view">
        <field name="name">res.config.settings.sms.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="SMS" string="SMS" name="sms">
                    <block title="SMS" name="sms_setting_container">
                        <setting id="sms_control_setting" title="SMS" string="SMS">
                            <div class="content-group" name="sms_options">
                                <div class="d-flex">
                                    <label for="sms_nama_api_url" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_api_url" class="ml16"/>
                                </div>
                                <div class="d-flex">
                                    <label for="sms_nama_method" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_method" class="ml16"/>
                                </div>
                                <div class="d-flex">
                                    <label for="sms_nama_media_type" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_media_type" class="ml16"/>
                                </div>
                                <div class="d-flex">
                                    <label for="sms_nama_bank_code" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_bank_code" class="ml16"/>
                                </div>
                                <div class="d-flex">
                                    <label for="sms_nama_bank_pwd" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_bank_pwd" class="ml16" password="True"/>
                                </div>
                                <div class="d-flex">
                                    <label for="sms_nama_sender_id" class="o_light_label col-sm-5 col-form-label"/>
                                    <field name="sms_nama_sender_id" class="ml16"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
