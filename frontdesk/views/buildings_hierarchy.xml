<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Building Views -->
    <record id="view_building_tree" model="ir.ui.view">
        <field name="name">owwsc.building.tree</field>
        <field name="model">owwsc.building</field>
        <field name="arch" type="xml">
            <tree string="Buildings">
                <field name="name"/>
                <field name="code"/>
                <field name="wilayat_id"/>
                <field name="governorate_id"/>
                <field name="image" widget="image" options="{'size': [64, 64]}"/>
            </tree>
        </field>
    </record>

    <record id="view_building_form" model="ir.ui.view">
        <field name="name">owwsc.building.form</field>
        <field name="model">owwsc.building</field>
        <field name="arch" type="xml">
            <form string="Building">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <notebook>
                        <page string="Info">
                            <group>
                                <field name="code"/>
                                <field name="operating_unit_id"
                                    groups="operating_unit.group_multi_operating_unit"
                                    options="{'no_create': True}"
                                />
                            </group>

                            <group>
                                <field name="wilayat_id"/>
                                <field name="governorate_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Levels">
                            <field name="level_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

