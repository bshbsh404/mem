<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_availability_form" model="ir.ui.view">
            <field name="name">employee.availability.form</field>
            <field name="model">employee.availability</field>
            <field name="arch" type="xml">
                <form string="Employee Availability">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <notebook>
                            <page string="availability" name="availability_page">
                                <group name="info">
                                    <group name="availability">
                                        <field name="availability_type"/>
                                    </group>
                                    <group name="Period">
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_employee_availability_tree" model="ir.ui.view">
            <field name="name">employee.availability.tree</field>
            <field name="model">employee.availability</field>
            <field name="arch" type="xml">
                <tree string="Employee Availabilities">
                    <field name="name"/>
                    <field name="availability_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_availability" model="ir.actions.act_window">
            <field name="name">Employee Availability</field>
            <field name="res_model">employee.availability</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_employee_availability" name="Manage Availability" parent="hr.menu_config_employee" action="action_employee_availability" sequence="10"/>


    </data>
</odoo>