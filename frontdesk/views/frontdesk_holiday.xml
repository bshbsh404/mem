<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_frontdesk_holiday_tree" model="ir.ui.view">
        <field name="name">frontdesk.holiday.tree</field>
        <field name="model">frontdesk.holiday</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_frontdesk_holiday_form" model="ir.ui.view">
        <field name="name">frontdesk.holiday.form</field>
        <field name="model">frontdesk.holiday</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_frontdesk_holiday_calendar" model="ir.ui.view">
        <field name="name">frontdesk.holiday.calendar</field>
        <field name="model">frontdesk.holiday</field>
        <field name="arch" type="xml">
            <calendar date_start="date_from" date_stop="date_to" string="Holidays"
                mode="month" color="name" event_open_popup="true" quick_create="false">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <!-- Action for the Holidays -->
    <record id="action_frontdesk_holiday" model="ir.actions.act_window">
        <field name="name">Holiday Configuration</field>
        <field name="res_model">frontdesk.holiday</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="view_id" ref="view_frontdesk_holiday_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_frontdesk_holiday" name="Holiday Configuration"
              parent="frontdesk_menu_root" action="action_frontdesk_holiday"
              sequence="10" groups="frontdesk_group_administrator"/>
</odoo>
