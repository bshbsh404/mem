<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visitor Blacklist Tree View -->
    <record id="visitor_blacklist_tree" model="ir.ui.view">
        <field name="name">Visitor Blacklist Tree</field>
        <field name="model">visitor.blacklist</field>
        <field name="arch" type="xml">
            <tree string="Blacklisted Visitors" create="true" edit="false" delete="true">
                <field name="visitor_name"/>
                <field name="visitor_id_number"/>
                <field name="visitor_email"/>
                <field name="visitor_phone"/>
                <field name="user_id"/>
                <field name="blacklist_date"/>
                <field name="blacklist_reason"/>
                <field name="active" invisible="1"/>
                <button name="action_remove_from_blacklist" 
                        string="Remove from Blacklist" 
                        type="object" 
                        icon="fa-unlock"
                        attrs="{'invisible': [('active', '=', False)]}"
                        groups="frontdesk_blacklist.group_blacklist_manager"/>
                <button name="action_add_to_blacklist" 
                        string="Add to Blacklist" 
                        type="object" 
                        icon="fa-lock"
                        attrs="{'invisible': [('active', '=', True)]}"
                        groups="frontdesk_blacklist.group_blacklist_manager"/>
            </tree>
        </field>
    </record>

    <!-- Visitor Blacklist Form View -->
    <record id="visitor_blacklist_form" model="ir.ui.view">
        <field name="name">Visitor Blacklist Form</field>
        <field name="model">visitor.blacklist</field>
        <field name="arch" type="xml">
            <form string="Blacklist Record">
                <header>
                    <button name="action_remove_from_blacklist" 
                            string="Remove from Blacklist" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('active', '=', False)]}"
                            groups="frontdesk_blacklist.group_blacklist_manager"/>
                    <button name="action_add_to_blacklist" 
                            string="Add to Blacklist" 
                            type="object" 
                            class="btn-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                            groups="frontdesk_blacklist.group_blacklist_manager"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="visitor_name" readonly="1"/>
                            <field name="visitor_id_number" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="blacklist_date" readonly="1"/>
                            <field name="visitor_email" readonly="1"/>
                            <field name="visitor_phone" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="blacklist_reason" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="visitor_blacklist_search" model="ir.ui.view">
        <field name="name">Visitor Blacklist Search</field>
        <field name="model">visitor.blacklist</field>
        <field name="arch" type="xml">
            <search string="Search Blacklisted Visitors">
                <field name="visitor_name"/>
                <field name="visitor_id_number"/>
                <field name="visitor_email"/>
                <field name="user_id"/>
                <field name="blacklist_reason"/>
                <filter name="active_blacklist" string="Active Blacklist" domain="[('active', '=', True)]"/>
                <filter name="inactive_blacklist" string="Removed from Blacklist" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_user" string="Blacklisted By" context="{'group_by': 'user_id'}"/>
                    <filter name="group_by_date" string="Blacklist Date" context="{'group_by': 'blacklist_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_visitor_blacklist" model="ir.actions.act_window">
        <field name="name">Visitor Blacklist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">visitor.blacklist</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="visitor_blacklist_search"/>
        <field name="context">{'search_default_active_blacklist': 1}</field>
    </record>
</odoo>